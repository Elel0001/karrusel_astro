---
const { data } = Astro.props;
---

<a href={`artists/${data.slug}`}>
  <article>
    <img src="img/album.png" alt="Picture of artist" />
    <div>
      <h4>{data.name}</h4>
      <div class="info">
        <p>{data.day}</p>
        <img src="/svg/star.svg" alt="star symbol" class="star" />
        <p>{data.stage}</p>
      </div>
    </div>
  </article>
</a>

<style>
  article {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius_medium);
    background-color: var(--primary_800);
  }

  div {
    padding: var(--spacing_4);
    display: flex;
    flex-direction: column;
    gap: var(--spacing_2);
  }

  .info {
    display: flex;
    flex-direction: row;
    gap: var(--spacing_2);
    align-items: center;
    padding: 0;
  }

  .star {
    width: 12px;
  }

  p {
    font-size: 1rem;
  }

  img {
    border-radius: 0;
  }
</style>
