---
const { name, day, stage } = Astro.props;
---

<article>
  <img src="img/album.png" alt="Picture of artist" />
  <div>
    <h3>AME</h3>
    <div class="info">
      <p>Thursday</p>
      <img src="svg/star.svg" alt="star symbol" class="star" />
      <p>Tribunen</p>
    </div>
  </div>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius_medium);
    background-color: var(--primary_800);
  }

  div {
    padding: var(--spacing_6);
    display: flex;
    flex-direction: column;
    gap: var(--spacing_2);
  }

  .info {
    display: flex;
    flex-direction: row;
    gap: var(--spacing_4);
    align-items: center;
    padding: 0;
  }

  .star {
    width: 12px;
  }

  p {
    font-size: 1rem;
  }

  img {
    border-radius: 0;
  }
</style>
