---
const { type, size } = Astro.props;
---

<button class={type + " " + size}> Knap </button>

<style>
  button {
    font-family: var(--font_body);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary_50);
    filter: drop-shadow(0px 0px 10px var(--accent_600));

    border: none;
    border-radius: 6rem;

    padding: var(--spacing_4) var(--spacing_7);
  }

  button:hover {
    font-size: 1.375rem;
  }

  /* TYPE */
  .primary {
    background-color: var(--accent_600);
  }
  .secondary {
    color: var(--primary_50);
    border: solid;
    border-color: var(--primary_50);
    background-color: transparent;
    filter: drop-shadow(0px 0px 5px var(--primary_50));
  }

