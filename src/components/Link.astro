---
const { variant, link, page } = Astro.props;
---

<a href={link} class={variant + " " + page}><slot /></a>

<style>
  a {
    font-family: var(--font_display);
    color: var(--primary_50);
    text-decoration: none;
  }
  a:hover {
    filter: drop-shadow(0 0 4px var(--primary_50));
  }
  .main {
    font-size: 1.25rem;
    text-transform: uppercase;
  }
  .active {
    text-decoration: underline;
    filter: drop-shadow(0 0 4px var(--primary_50));
  }

  .breadcrumb {
    font-size: 1rem;
  }

  @media (min-width: 800px) {
    .breadcrumb {
      font-size: 1.25rem;
    }
  }
</style>
